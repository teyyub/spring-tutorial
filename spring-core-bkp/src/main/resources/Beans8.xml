<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id = "employee" class = "org.example.tutorials.dtos.Employee">
        <constructor-arg value="10" type="int"/>
        <constructor-arg value="John" type="java.lang.String"/>
    </bean>


    <bean id = "employee1" class = "org.example.tutorials.dtos.Employee" scope="singleton">
    </bean>

    <bean id = "employee2" class = "org.example.tutorials.dtos.Employee" scope="singleton">
        <constructor-arg value="John"></constructor-arg>
    </bean>
</beans>