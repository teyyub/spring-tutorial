<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id = "helloWorld1" class = "org.example.tutorials.dtos.HelloWorld">
        <property name = "message" value = "Hello World!"/>
    </bean>

    <bean id = "cStartEventHandler" class = "org.example.tutorials.events.CStartEventHandler"/>
    <bean id = "cStopEventHandler" class = "org.example.tutorials.events.CStopEventHandler"/>

    <bean id = "helloWorld" class = "org.example.tutorials.dtos.HelloWorld" scope="singleton">
        <property name = "message" value = "Hello World!, I am learning Spring"/>
    </bean>
</beans>